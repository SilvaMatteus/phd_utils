	pages = {89--101},
}

@article{suresh_causal_2022,
	title = {Causal {Adversarial} {Channels} {With} {Feedback} {Snooping}},
	volume = {3},
	issn = {2641-8770},
	doi = {10.1109/JSAIT.2022.3158230},
	abstract = {With the advent of 5G and technologies such as cloud computing, Internet-of-Things (IoT), etc, future communication networks will consist of a large number of heterogeneous devices connected together. A critical aspect will be ensuring that communication is not only fast and reliable, but also resilient to malicious attack. As networks increasingly adopt zero-trust principles in their security frameworks, it is important to consider such attacks from a zero-trust perspective. Motivated by this, we consider the problem of communicating a message reliably across a binary erasure channel (BEC( q )) or a binary symmetric channel (BSC( q )) against an adversary actively injecting additional erasures or flips at the channel’s input. The adversary can corrupt up to a fraction p of the transmitted bits and knows the transmission scheme agreed upon by the communicating terminals. Further, he has the capability to causally snoop in on both the transmitter and the receiver in real time, i.e., if {\textbackslash}mathbf x=(x\_1,x\_2,{\textbackslash}ldots, x\_n) and {\textbackslash}mathbf y=(y\_1,y\_2,{\textbackslash}ldots, y\_n) denote the transmitted and the received codewords respectively, at each time k , he knows (x\_1,x\_2,{\textbackslash}ldots, x\_k) and (y\_1,y\_2,{\textbackslash}ldots, y\_k-1) . Using his side-information, the adversary is free to employ any attack that respects his constraint on the number of corruptible bits. We prove an information-theoretic tight capacity characterization as a function of p and q for (i) the erasure adversary with a BEC( q ) and (ii) the bit-flip adversary with a BSC( q ). A unique feature of our models is the compounding of stochastic and adversarial noise sources. Our analysis reveals the worst-case adversarial attacks for both models and proves the existence of coding schemes that achieve rates equal to the capacity for any adversarial attack. In the case of bit-flips, we show that, interestingly, when p is below a certain threshold (that depends on q ), the adversary is no worse than an i.i.d. memory-less noise source.},
	number = {1},
	journal = {IEEE Journal on Selected Areas in Information Theory},
	author = {Suresh, Vinayak and Ruzomberka, Eric and Wang, Chih-Chun and Love, David J.},
	month = mar,
	year = {2022},
	pages = {69--84},
}

@inproceedings{biernacki_sequestered_2022,
	title = {Sequestered {Encryption}: {A} {Hardware} {Technique} for {Comprehensive} {Data} {Privacy}},
	doi = {10.1109/SEED55351.2022.00014},
	abstract = {Data breaches that penetrate web-facing servers and exfiltrate sensitive user data have become pervasive. Insulating these systems from attack is seemingly impossible due to the ubiquity of software vulnerabilities within cloud applications. It is simply insurmountable to adequately address all such vulnerabilities, and therefore imprudent to rely on software applications to protect user data. Rather, the ideal systems solution upholds data confidentiality, even in the presence of vulnerable or compromised software. Homomorphic encryption (HE) provides these capabilities, but its limited expressiveness and significant runtime overheads have inhibited its adoption. In this work, we explore how trusted hardware can be leveraged to provide data confidentiality in the presence of vulnerable software while achieving practical performance overheads. We present Sequestered Encryption (SE)—a hardware technique for data privacy that sequesters sensitive plaintext data into a small hardware root of trust and encrypts this data in all external microarchitectural structures, thereby rendering secret values inaccessible to software. With optimizations, SE achieves {\textless}2.5× performance slowdowns on average compared to native execution, demonstrating that architectural approaches can emerge as data privacy solutions that possess zero trust in software while being dynamic, expressive, and performant.},
	booktitle = {2022 {IEEE} {International} {Symposium} on {Secure} and {Private} {Execution} {Environment} {Design} ({SEED})},
	author = {Biernacki, Lauren and Demissie, Meron Zerihun and Workneh, Kidus Birkayehu and Andargie, Fitsum Assamnew and Austin, Todd},
	month = sep,
	year = {2022},
	pages = {73--84},
}

