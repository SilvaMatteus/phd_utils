@inproceedings{moudni_multi-cloud_2023,
	title = {A {Multi}-{Cloud} and {Zero}-{Trust} based {Approach} for {Secure} and {Redundant} {Data} {Storage}},
	doi = {10.1109/WINCOM59760.2023.10323009},
	abstract = {As cloud services gain in popularity, users around the world are increasingly using them in their daily lives to store and process their critical and sensitive data, such as ecommerce services, healthcare information, government data and more. The growing importance of cloud services makes cloud storage systems an excellent target for cybercrime and protecting them is an absolute must. The aim of this paper is to propose a new zero-trust based model for data storage in a multi-cloud environment. The proposed model considers the security and availability constraints of multi-cloud environments while respecting the zero-trust principle. Our model addresses growing security challenges as it requires users and services to verify their identity credentials before accessing corporate cloud resources. In this way, access to critical resources becomes more secure. Our model is adapted to modern cloud storage systems and makes user data more secure, in line with the famous quote “Never trust, always verify”.},
	booktitle = {2023 10th {International} {Conference} on {Wireless} {Networks} and {Mobile} {Communications} ({WINCOM})},
